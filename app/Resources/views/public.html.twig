        <h3 class="muted"><a href="{{ path('app_core_homepage') }}">Stage1</a></h3>
      </div>

      <hr>

      {% block body %}{% endblock %}

      <hr>

      <div class="footer">
        <ul class="breadcrumb">
          <li>&copy; <a href="http://stage1.io/">Stage1</a> 2013 <span class="divider">/</span></li>
          <li><i class="icon-twitter"></i> <a href="http://twitter.com/stage1app">@stage1app</a> <span class="divider">/</span></li>
          <li><i class="icon-github"></i> <a href="http://github.com/stage1">stage1</a></li>
