<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Stage1</title>

    {% stylesheets output="assets/demo.css"
        'css/vendor/*'
        'css/stage1.css'
        'css/public.css'
        'css/demo.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
  </head>

  <body>

    <div class="container-narrow">

      <div class="masthead">
        <ul class="nav nav-pills pull-right">
          <li><a href="{{ path('app_core_homepage') }}">Home</a></li>
          <li><a href="{{ path('app_core_auth_github_authorize') }}">Signin</a></li>
          <li class="active"><a href="{{ path('app_core_demo') }}">Demo</a><li>
        </ul>
        <h3 class="muted"><a href="{{ path('app_core_homepage') }}">Stage1</a></h3>
      </div>

      <hr>

      {% block body %}{% endblock %}

      <hr>

      <div class="footer">
        <ul class="breadcrumb">
            <li>Stage1 &copy; 2013</li>
        </ul>
      </div>

    </div> <!-- /container -->
    <script type="text/javascript">
    var websocket_auth_url = '{{ path("app_core_primus_auth") }}';
    </script>
    {% javascripts output="assets/demo.js"
        'js/vendor/jquery.js'
        'js/vendor/mustache.js'
        'js/vendor/*'
        'js/primus.js'
        'js/demo.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% block javascripts %}{% endblock %}
  </body>
</html>
