<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}stage1{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
        <style type="text/css">body { padding-top: 60px; }</style>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="brand" href="#">Stage1</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav pull-right">
                            {% if is_granted('ROLE_USER') %}
                            <li><a href="#">Logged in as {{ app.user.username }}</a></li>
                            <li class="divider-vertical"></li>
                            <li><a href="{{ path('app_core_logout') }}"><i class="icon-off"></i></a></li>
                            {% else %}
                            <li><a href="#" id="login">Login with github</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span3">
                    {% if is_granted('ROLE_USER') %}
                    {% include 'AppCoreBundle:Default:_sidebar.html.twig' %}
                    {% endif %}
                </div>
                <div class="span9">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        {% block javascripts %}{% endblock %}
        <script src="/oauth.js"></script>
        <script src="/jquery.js"></script>
        {% if not is_granted('ROLE_USER') %}
        <script type="text/javascript">
        $('a#login').click(function() {
            OAuth.initialize('maWYPXfzovVpT1hkeqVXPmJ2Yn8');
            OAuth.popup('github', function(err, result) {
                $.post('/login/' + result.access_token, function(data) {
                    window.location = data.redirect_url;
                });
            });            
        });
        </script>
        {% endif %}
    </body>
</html>