build:
  - composer install --ansi --no-progress --no-dev --prefer-dist --no-interaction
  - php app/console doctrine:database:create
  - php app/console doctrine:schema:update --force
  - chmod -R 777 app/sessions
  - chmod -R 777 app/logs
  - chmod -R 777 app/cache
  - php app/console decitre:user:create admin admin
  - sed --in-place 's/host: ""/host: "'"$ANTIDOT_HOST"'"/' app/config/parameters.yml.dist
  - sed --in-place 's/service: ""/service: "'"$ANTIDOT_SERVICE"'"/' app/config/parameters.yml.dist