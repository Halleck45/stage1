<div id="build-failure-{{ build.id }}" class="modal hide fade inspect">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3 id="build-failure-{{ build.id }}-title">Build #{{ build.id }} failed</h3>
    </div>

    <div class="modal-body">
        <p class="lead"><pre>{{ build.failure.exception }}: {{ build.failure.message }}</pre></p>

        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_PREVIOUS_ADMIN') %}
        <pre style="overflow: auto; white-space: nowrap">{{ build.failure.trace | nl2br }}</pre>
        {% endif %}
    </div>

    <div class="modal-footer">
        <button class="btn" data-dismiss="modal">Close</button>
    </div>
</div>