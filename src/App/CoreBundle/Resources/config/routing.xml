<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="app_core_homepage" pattern="/" methods="GET">
        <default key="_controller">AppCoreBundle:Default:index</default>
    </route>

    <route id="app_core_projects_import" pattern="/projects/import" methods="GET">
        <default key="_controller">AppCoreBundle:Default:projectsImport</default>
    </route>

    <route id="app_core_project_import" pattern="/project/import" methods="POST">
        <default key="_controller">AppCoreBundle:Default:projectImport</default>
    </route>

    <route id="app_core_project_detect_branches" pattern="/project/{id}/branches/detect" methods="GET">
        <default key="_controller">AppCoreBundle:Default:projectDetectBranches</default>
    </route>

    <route id="app_core_project_branches" pattern="/project/{id}/branches" methods="GET">
        <default key="_controller">AppCoreBundle:Default:projectBranches</default>
    </route>

    <route id="app_core_project_show" pattern="/project/{id}" methods="GET">
        <default key="_controller">AppCoreBundle:Default:projectShow</default>
    </route>

    <route id="app_core_project_schedule_build" pattern="/project/{id}/build" methods="POST">
        <default key="_controller">AppCoreBundle:Default:projectScheduleBuild</default>
    </route>

    <route id="app_core_build_cancel" pattern="/build/{id}/cancel">
        <default key="_controller">AppCoreBundle:Default:buildCancel</default>
    </route>

    <route id="app_core_login" pattern="/login/{accessToken}" methods="POST">
        <default key="_controller">AppCoreBundle:Security:login</default>
    </route>

    <route id="app_core_logout" pattern="/logout">
        <default key="_controller">AppCoreBundle:Security:logout</default>
    </route>
</routes>
