<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="app_core_homepage" pattern="/" methods="GET">
        <default key="_controller">AppCoreBundle:Default:index</default>
    </route>

    <route id="app_core_projects_import" pattern="/projects/import" methods="GET">
        <default key="_controller">AppCoreBundle:Default:projectsImport</default>
    </route>

    <route id="app_core_project_import" pattern="/project/import" methods="POST">
        <default key="_controller">AppCoreBundle:Default:projectImport</default>
    </route>

    <route id="app_core_project_detect_branches" pattern="/project/{id}/branches/detect" methods="GET">
        <default key="_controller">AppCoreBundle:Default:projectDetectBranches</default>
    </route>

    <route id="app_core_project_branches" pattern="/project/{id}/branches" methods="GET">
        <default key="_controller">AppCoreBundle:Default:projectBranches</default>
    </route>

    <route id="app_core_project_builds" pattern="/project/{id}/builds" methods="GET">
        <default key="_controller">AppCoreBundle:Default:projectBuilds</default>
    </route>

    <route id="app_core_project_schedule_build" pattern="/project/{id}/build" methods="POST">
        <default key="_controller">AppCoreBundle:Default:projectScheduleBuild</default>
    </route>

    <route id="app_core_project_admin" pattern="/project/{id}/admin" methods="GET">
        <default key="_controller">AppCoreBundle:Default:projectAdmin</default>
    </route>

    <route id="app_core_project_delete" pattern="/project/{id}/delete" methods="POST">
        <default key="_controller">AppCoreBundle:Default:projectDelete</default>
    </route>

    <route id="app_core_project_show" pattern="/project/{id}" methods="GET">
        <default key="_controller">AppCoreBundle:Default:projectShow</default>
    </route>

    <route id="app_core_build_cancel" pattern="/build/{id}/cancel">
        <default key="_controller">AppCoreBundle:Default:buildCancel</default>
    </route>

    <route id="app_core_build_show" pattern="/build/{id}">
        <default key="_controller">AppCoreBundle:Default:buildShow</default>
    </route>

    <route id="app_core_build_kill" pattern="/build/{id}/kill">
        <default key="_controller">AppCoreBundle:Default:buildKill</default>
    </route>

    <route id="app_core_hooks_github" pattern="/hooks/github">
        <default key="_controller">AppCoreBundle:Default:hooksGithub</default>
    </route>

    <route id="app_core_auth_github_authorize" pattern="/login/github">
        <default key="_controller">AppCoreBundle:Security:authorize</default>
    </route>

    <route id="app_core_auth_github_callback" pattern="/auth/github">
        <default key="_controller">AppCoreBundle:Security:callback</default>
    </route>

    <route id="app_core_project_auth" pattern="/auth/{slug}" methods="GET">
        <default key="_controller">AppCoreBundle:Project:auth</default>
    </route>

    <route id="app_core_project_authorize" pattern="/auth/{slug}" methods="POST">
        <default key="_controller">AppCoreBundle:Project:authorize</default>
    </route>

    <route id="app_core_logout" pattern="/logout">
        <default key="_controller">AppCoreBundle:Security:logout</default>
    </route>

    <route id="app_core_configure_save" pattern="/configure" methods="POST">
        <default key="_controller">AppCoreBundle:Configure:save</default>
    </route>

    <route id="app_core_configure" pattern="/configure" methods="GET">
        <default key="_controller">AppCoreBundle:Configure:index</default>
    </route>
</routes>
