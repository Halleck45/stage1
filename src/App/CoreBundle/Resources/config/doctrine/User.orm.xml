<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\CoreBundle\Entity\User" table="user">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>
        <field name="githubId" column="github_id" type="integer" />
        <field name="username" column="username" type="string" length="255" />
        <field name="email" column="email" type="string" length="255" nullable="true" />
        <field name="accessToken" column="access_token" type="string" length="255" />
        <field name="createdAt" column="created_at" type="datetime" />
        <field name="updatedAt" column="updated_at" type="datetime" />
        <field name="lastLoginAt" column="last_login_at" type="datetime" />

        <many-to-many field="projects" target-entity="App\CoreBundle\Entity\Project" mapped-by="users" />
    </entity>
</doctrine-mapping>