#!/bin/bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

if [ -f /etc/environment ]; then
    source /etc/environment
fi

PID_DIR="/tmp/run"
PID_FILE="$PID_DIR/websocket-$2.pid"

LOG_DIR="/tmp/log"
LOG_FILE="$LOG_DIR/websocket-$2.log"

ACTION=$1
SCRIPT=$(realpath $DIR/../websocket/$2)
PORT=$3

WEBSOCKETD=$(realpath $DIR/../websocketd)

case $ACTION in 
    start)
        if [ ! -d $PID_DIR ]; then
            mkdir -p $PID_DIR
        fi
        
        if [ ! -d $LOG_DIR ]; then
            mkdir -p $LOG_DIR
        fi

        echo $$ > $PID_FILE
        exec 2>&1 $WEBSOCKETD --port=$PORT $SCRIPT >> $LOG_FILE 2>> $LOG_FILE
        ;;
    stop)
        kill $(cat $PID_FILE)
        ;;
    *)
        echo "usage $0 {start|stop} script port"
esac
exit 0