#!/bin/bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

PID_DIR="/tmp/run"
PID_FILE=$PID_DIR/consumer-$2.pid

ACTION=$1
CONSUMER=$2

CONSOLE=$(realpath $DIR/../../app/console)

case $1 in 
    start)
        if [ ! -d $PID_DIR ]; then
            mkdir -p $PID_DIR
        fi
        
        echo $$ > $PID_FILE
        exec 2>&1 /usr/bin/php $CONSOLE rabbitmq:consumer --env=prod -vvv -w $2
        ;;
    stop)
        kill $(cat $PID_FILE)
        ;;
    *)
        echo "usage $0 {start|stop} consumer-name"
esac
exit 0